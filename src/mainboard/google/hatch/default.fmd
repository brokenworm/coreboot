FLASH@0xff000000 0x1000000 {
	SI_ALL@0x0 0x400000 {
		SI_DESC@0x0 0x1000
		SI_ME@0x1000 0x3ff000
	}
	SI_BIOS@0x400000 0xc00000 {
		# SMMSTORE requires 64k alignment
		SMMSTORE 0x40000
		UNIFIED_MRC_CACHE 0x20000 {
			RECOVERY_MRC_CACHE 0x10000
			RW_MRC_CACHE 0x10000
		}
		FMAP 0x800
		RO_VPD 0x4000
		COREBOOT(CBFS)
	}
}
